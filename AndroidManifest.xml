<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="org.netention.curiosume"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="7" />

    <uses-permission android:name="android.permission.INTERNET" >
    </uses-permission>

    <application
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="org.netention.curiosume.MainActivity"
            android:label="@string/title_activity_main" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="org.netention.curiosume.TagActivity"
            android:label="@string/title_activity_tag" >
        </activity>
        <activity
            android:name="org.netention.curiosume.InventoryActivity"
            android:label="@string/title_activity_inventory" >
        </activity>
        <activity
            android:name="org.netention.curiosume.ClassifyTagActivity"
            android:label="@string/title_activity_classify_tag" >
        </activity>
    </application>

</manifest>
